<%- include("header") -%>
	<div class="box" id="heading">
		<h1><%= listtitle %></h1>
	</div>
	<div class="box">
		<% newtodos.forEach(function(newtodo){%>
		<form action="/delete" method="post">
		<div class="item">
			<input type="checkbox" onChange="this.form.submit()" name="deletedItem" value="<%=newtodo._id%>">
			<p><%= newtodo.name %></p>
		</div>
		<input type="hidden" name="listName" value="<%=listtitle%>"></input>
		</form>	
		<%});%>	
		<form action="/" method="post" class="item">
			<input type="text" name="todo" placeholder="New Item" autocomplete="off">
			<button type="submit" name="list" value="<%= listtitle %>">+</button>
		</form>
	</div>	
<%- include("footer") -%>